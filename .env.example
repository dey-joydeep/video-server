# REQUIRED: where your videos live (recurse all subfolders)
VIDEO_ROOT=D:\Videos\P

# Server bind + port
BIND=0.0.0.0
PORT=8200

# Where to store the JSON index and thumbnails (relative to project)
DATA_DIR=./data
THUMBS_DIR=./thumbs

# Thumbnail settings
THUMB_WIDTH=320
THUMB_AT_SECONDS=3


# Optional explicit ffmpeg/ffprobe paths (leave empty to use PATH)
# FFMPEG_PATH=C:\ffmpeg\bin\ffmpeg.exe
# FFPROBE_PATH=C:\ffmpeg\bin\ffprobe.exe

# HLS / session settings
HLS_DIR=.hls
HLS_SEG_SEC=4
TOKEN_TTL_SEC=900
TOKEN_PIN_IP=true
HLS_MAX_CONCURRENT_JOBS=2

# Logging
ROOT_LOG_DIR=logs
TOOLS_LOG_DIR=logs/tools-log
LOG_LEVEL=debug
LOG_ROTATION_MAX_SIZE=100m
LOG_ROTATION_MAX_FILES=14d

# Filename suffixes for generated assets
SUFFIX_THUMB=_thumb.jpg
SUFFIX_SPRITE_IMG=_sprite.jpg
SUFFIX_SPRITE_VTT=_sprite.vtt
SUFFIX_PREVIEW_CLIP=_preview.mp4
