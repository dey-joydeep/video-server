{
  "name": "lan-video-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Simple LAN video server with thumbnails and incremental sync",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon",
    "prebuild": "node -e \"require('fs').mkdirSync('public/dist', { recursive: true })\",",
    "build": "npm run build:js && npm run build:css",
    "build:js": "terser public/js/main.js --compress --mangle -o public/dist/main.min.js && terser public/js/player.js --compress --mangle -o public/dist/player.min.js",
    "build:css": "cssnano-cli public/styles.css public/dist/styles.css",
    "serve:prod": "cross-env NODE_ENV=production node server.js",
    "process": "node tools/main.js",
    "start:sync": "npm run process && node server.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mime": "^4.1.0",
    "morgan": "^1.10.1",
    "sharp": "^0.33.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "cross-env": "^10.1.0",
    "cssnano-cli": "^1.0.5",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "terser": "^5.44.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
